---
site:
  logo: /assets/images/logo.png
---

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <title>{{ renderData.title or title or metadata.title }}</title>

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="{{ "/assets/images/favicons/favicon.ico" | url }}">
    <link rel="icon" type="image/png" href="{{ "/assets/images/favicons/favicon-16x16.png" | url }}" sizes="16x16">
    <link rel="icon" type="image/png" href="{{ "/assets/images/favicons/favicon-32x32.png" | url }}" sizes="32x32">
    <link rel="apple-touch-icon" href="{{ "/assets/images/favicons/apple-touch-icon.png" | url }}">
    <link rel="icon" type="image/png" href="{{ "/assets/images/favicons/android-chrome-192x192.png" | url }}" sizes="192x192">
    <link rel="icon" type="image/png" href="{{ "/assets/images/favicons/android-chrome-512x512.png" | url }}" sizes="512x512">
    <link rel="manifest" href="{{ "/assets/images/favicons/manifest.json" | url }}">
    <link rel="mask-icon" href="{{ "/assets/images/favicons/safari-pinned-tab.svg" | url }}" color="#5bbad5">
    
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="msapplication-TileImage" content="{{ "/assets/images/favicons/mstile-150x150.png" | url }}">
    <meta name="msapplication-config" content="{{ "/assets/images/favicons/browserconfig.xml" | url }}">
    <meta name="theme-color" content="#ffffff">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Merriweather:300,700,700italic,300italic|Open+Sans:700,400" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <link rel="stylesheet" type="text/css" href="{{ '/assets/styles/index.css' | url }}" />

    <script type="text/javascript" async
        src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.1/MathJax.js?config=TeX-AMS_CHTML">
    </script>

    <script>
        var social_link = {
            'linkedin': 'https://www.linkedin.com/in/rene-hernandez-5aabb784',
            'github': 'https://github.com/renehernandez',
            'stack-overflow': 'https://stackoverflow.com/users/2158047/aegis'
        };
        </script>
</head>
<body class="{{ body_class }} pt-6">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-secondary fixed-top">
            <a class="navbar-brand" href="/">
                <img src="{{ site.logo | url }}" alt="{{ metadata.title }}" height="35"/>
            </a>
            <span class="navbar-text d-none d-md-inline blog-description">{{ metadata.description }}</span>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsedNavigation" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsedNavigation">
                <div class="navbar-nav mr-auto d-lg-none">
                    {% include "navigation.njk" %}
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
       <div class="row">
            <div class="col-12 col-lg">
                <nav class="left-menu flex-column" role="presentation">
                    <div class="d-none d-lg-block">
                        {% include "navigation.njk" %}
                    </div>
                    <hr class="d-none d-lg-block"/>
                    <div class="d-none d-lg-block">
                        <span>Find me on</span>
                        <ul class="social_link">
                        </ul>
                    </div>
                    <hr class="d-none d-lg-block" />
                    <div class="d-none d-lg-block">
                        <span>Common topics</span>
                        {% set sortedTags = collections.tagList | sortByPostsCount(collections) | head(-5) | reverse %}
                        {% for tag in sortedTags %}
                            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                            <a class="nav-link" href="{{ tagUrl | url }}"> 
                                <span class="badge badge-secondary">
                                    {{ tag }}
                                </span>
                            </a>
                        {% endfor %}
                    </div>
                </nav>
            </div>
            <div class="col-12 col-lg-8">
                <main role="main">   
                     {{ content | safe }}
                </main>
            </div>
            <div class="col-lg"></div>
        </div>
        
        <div class="row">
            <div class="col">
                <footer class="site-footer clearfix">
                    <section class="copyright"><a href="{{ '/' | url }}">{{ metadata.title }}</a> &copy; {{ '' | yearFromToday }}</section>
                    <section class="poweredby">
                        Created by <a href="https://www.linkedin.com/in/rene-hernandez-5aabb784/">Rene Hernandez</a>. Published with <a href="https://www.11ty.io/">Eleventy</a> and <a href="https://www.netlify.com/">Netlify</a>
                    </section>
                </footer>
            </div>
        </div>
    </div>

    <script
        src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    
    <script type="text/javascript" src="{{ "/assets/scripts/jquery.fitvids.js" | url }}"></script>
    <script type="text/javascript" src="{{ "/assets/scripts/prism.js" | url }}"></script>
    <script type="text/javascript" src="{{ "/assets/scripts/rrssb.min.js" | url }}"></script>
    

    <script type="text/javascript" src="{{ "/assets/scripts/social_sharing.js" | url }}"></script>
    <script type="text/javascript" src="{{ "/assets/scripts/social_links.js" | url }}"></script>
</body>
</html>
